<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <ImageView
        android:id="@+id/dialog_image_list_preference_image"
        android:layout_width="48dp"
        android:layout_height="fill_parent"
        android:layout_marginRight="6dp"
        android:contentDescription="@string/pref_icon" />

    <CheckedTextView
        android:id="@+id/dialog_image_list_preference_check"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/dialog_image_list_preference_image"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical"
        android:textSize="18sp" />

</RelativeLayout>